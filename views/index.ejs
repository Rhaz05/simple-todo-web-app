<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Share+Tech&display=swap" rel="stylesheet">
    
    <!--Font Awesome Icons --> 
    <script src="https://kit.fontawesome.com/91d5bebb50.js" crossorigin="anonymous"></script>
    
    <!-- CSS-->
    <link rel="stylesheet" href="style.css">
    <script src="https://cdn.tailwindcss.com"></script>
    
    <!-- HTMX -->
    <script src="https://unpkg.com/htmx.org@2.0.1" integrity="sha384-QWGpdj554B4ETpJJC9z+ZHJcA/i59TyjxEPXiiUgN2WmTyV5OEZWCD6gQhgkdpB/" crossorigin="anonymous"></script>
    
    <title>HTMX Test</title>
</head>

<body>
    <!-- Header -->
    <header>
        <h1 class="flex justify-center text-5xl mt-5 p-2">Todo List</h1>
    </header>

    <!-- Main Content -->
    <main class="container mx-auto">
        <section class="flex justify-center text-center">
            <div 
                class="border w-[33%] h-[400px] bg-slate-50 rounded-md p-10 text-xl max-h-[400px] overflow-y-auto overflow-x-hidden"
            >
                <ul id="todoList" hx-get="/task" hx-trigger="load" hx-swap="innerHTML"></ul>
            </div>
        </section>
        <section class="text-center">
            <h4 class="text-2xl p-4">Add a New Task</h4>
            <form 
                class="flex justify-center gap-4"
                id="taskForm"
                hx-on::after-request="document.querySelector('#taskForm').reset()"
                hx-post="/task" 
                hx-target="#todoList" 
                hx-swap="beforeend" 
            >
                <input type="text" name="task" id="taskName" placeholder="Enter Task Name" class="px-3 border-2 rounded-md" autocomplete="off" required>
                <button 
                    type="submit" 
                    id="addTask"
                    class="w-24 p-2 border-2 rounded-md border-teal-400 text-teal-400 hover:bg-teal-400 hover:text-white"
                >
                    ADD
                </button>
            </form>
        </section>
    </main>
</body>

</html>